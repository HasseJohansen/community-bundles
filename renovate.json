{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:base"
  ],
  "regexManagers": [
    {
      "fileMatch": [
        "^earthly\\.(sh|ps1)$"
      ],
      "datasourceTemplate": "docker",
      "depNameTemplate": "earthly/earthly",
      "matchStrings": [
        "earthly\\/earthly:(?<currentValue>.*?)\\s"
      ],
      "versioningTemplate": "semver-coerced"
    }
  ]
}
